<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <%-include('_header'); %>
    <h2 class="my-4 text-center">Your Activity</h2>
    <% if(locals.allUrl){%>
      <table class="table px-4">
        <thead>
          <th>Serial No.</th>
          <th>Original Url</th>
          <th>Generated Url</th>
          <th>Clicks</th>
          <th>Delete</th>
        </thead>
        <tbody>
          <%allUrl.forEach((url,index)=>{%>
            <tr>
              <td>
                <%=index + 1%>
              </td>
              <td>
                <%=url.redirectedURL%>
              </td>
              <td><a href="http://localhost:3000/url/<%=url.shortId%>" target="_blank">localhost:3000/url/
                  <%=url.shortId%></a></td>
              <td>
                <%=url.visits%>
              </td>
              <td>
                <!-- to do handle in backend -->
                <a href="/activity/destroy/<%=url._id%>"><i class="fa-solid fa-trash"></i></a>
              </td>
            </tr>
            <%})%>
        </tbody>
      </table>
      <%}%>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
</body>
<script src="https://kit.fontawesome.com/338e4173fa.js" crossorigin="anonymous"></script>

</html>