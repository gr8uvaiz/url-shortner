<style>
  table {
    table-layout: auto;
  }
</style>
<h2 class="my-4 text-center">Your Activity</h2>
<div class="table-responsive " style="margin: 0px 50px;">

  <% if(locals.allUrl){%>
    <table class="table px-4">
      <thead>
        <th>Serial No.</th>
        <th>Original Url</th>
        <th>Generated Url</th>
        <th>Clicks</th>
        <th>Delete</th>
        <th>Author</th>
      </thead>
      <tbody>
        <%allUrl.forEach((url,index)=>{%>
          <tr>
              <td>
                <%=index + 1%>
              </td>
              <td>
                <%=url.redirectedURL%>
              </td>
              <td><a href="http://www.shorturl-c6iy.onrender/<%=url.shortId%>" target="_blank">shorturl-c6iy.onrender/<%=url.shortId%></a></td>
                <td>
                  <%=url.visits%>
                </td>
                <td>
                  <a href="/activity/destroy/<%=url._id%>"><i class="fa-solid fa-trash"></i></a>
                </td>
                <td>
                  <%=url.createdBy.name%>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
          <%}%>
        </div>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
          