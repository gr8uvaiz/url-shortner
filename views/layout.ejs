<script>
  // This code is only for the result.ejs
  document.getElementById("copyLinkButton").addEventListener("click", function() {
      var linkText = document.getElementById("urlLink").textContent; // Get the link text
      var tempInput = document.createElement("input"); // Create a temporary input element
      document.body.appendChild(tempInput);
      tempInput.setAttribute("value", linkText);
      tempInput.select();
      document.execCommand("copy"); // Copy the link text to the clipboard
      document.body.removeChild(tempInput); // Remove the temporary input element
  
      // Change the button text to indicate the link is copied
      this.textContent = "Link Copied!";
    });
</script>
